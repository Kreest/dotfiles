#!/bin/sh

if [ "$1" = "dual" ]; then
  xrandr --output eDP-1 --auto --right-of HDMI-1 --output HDMI-1 --auto
fi
if [ "$1" = "monitor" ]; then
  xrandr --output eDP-1 --off --output HDMI-1 --auto
fi
if [ "$1" = "laptop" ]; then
  xrandr --output eDP-1 --auto --output HDMI-1 --off
fi
if [[ "$1" = "mirror" ]]; then
  xrandr --output eDP-1 --auto --output HDMI-1 --same-as eDP-1 --auto
fi
#xrandr --output eDP-1 --auto --right-of HDMI-1 --output DP1 --mode 1920x1080 
~/.fehbg
