[module/ping]
type = custom/script
;exec = ~/.config/polybar/scripts/ping 1.1.1.1
;exec = ~/.config/polybar/scripts/ping 8.8.8.8
exec = ~/.config/polybar/scripts/ping 8.8.8.8
interval = 15

[module/filesystem]
type = internal/fs
interval = 30
label-mounted =  %free%
