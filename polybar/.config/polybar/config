[bar/top]
monitor = eDP-1
width = 100%
height = 24
border-size = 7
border-bottom-size = 0
border-color = #00000000
enable-ipc=true
fixed-center=true

background = #00ffffff
foreground = #ccffffff
line-color = ${bar/top.foreground}
line-size = 2
module-margin = 2
padding-right = 2

font-0 = NotoSans-Regular:size=10.5;3
font-1 = FontAwesome5Free:style=Solid:size=10;2
font-2 = FontAwesome5Brands:style=Solid:size=10;2
font-3 = MaterialIcons:size=10;3
font-4 = Roboto:size=10;0

tray-background = #000000
tray-position = right
tray-transparent = true
tray-detached = false

modules-left = i3 mpd
modules-center = title
modules-right = bandwidth ping battery cpu memory temperature filesystem date

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

label-focused-background = #88880000
label-focused-padding-right = 1
label-unfocused-padding-right = 1

strip-wsnumbers = true
enable-scroll = false
wrapping-scroll = false

[module/mpd]
type = internal/mpd

host = 127.0.0.1
