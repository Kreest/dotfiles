## Colorize the ls output ##
alias ls='ls --color=auto --group-directories-first'

## Use a long listing format ##
alias ll='ls -l'

## Show hidden files too ##
alias l.='ll -A'

## Bunch of colored outputs
alias diff='diff --color=auto'
alias grep='grep --color=auto'

## Sane calendar
alias cal='cal -m'

## Ledger default file
alias ledger='ledger -f ~/money/ledger --start-of-week=1'

## Arch user repo helper
alias bb='bb-wrapper'

## mpc settings
alias mpc='mpc -6601'
